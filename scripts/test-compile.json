{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outFile": "./dist/test-video-processing.js",
    "baseUrl": ".",
    "paths": {
      "~/*": ["../web/app/*"]
    },
    "types": ["node"]
  },
  "include": [
    "./test-video-processing.ts",
    "../web/app/services/video.server.ts",
    "../web/app/services/gemini.server.ts"
  ],
  "exclude": ["node_modules"]
}
